<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.login.RegisterActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/korean"
        android:text="새로운 친구 !"
        android:textColor="@android:color/black"
        android:textSize="12pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/registerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/korean"
        android:text="오똑캐 오톡해 회원가입"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome" />

    <LinearLayout
        android:id="@+id/register_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerText">

        <LinearLayout
            android:id="@+id/register_email_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_login_edit"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="15dp"
            android:paddingEnd="5dp"
            android:paddingBottom="15dp">

            <EditText
                android:id="@+id/register_email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/korean"
                android:hint="이메일"
                android:inputType="text"
                android:maxLength="25"
                android:maxLines="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/register_pw_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_login_edit"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="15dp"
            android:paddingEnd="5dp"
            android:paddingBottom="15dp">

            <EditText
                android:id="@+id/register_pw"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/korean"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:maxLength="15"
                android:maxLines="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/register_re_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_login_edit"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="15dp"
            android:paddingEnd="5dp"
            android:paddingBottom="15dp">

            <EditText
                android:id="@+id/register_re_pw"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/korean"
                android:hint="비밀번호 재입력"
                android:inputType="textPassword"
                android:maxLength="15"
                android:maxLines="1" />

        </LinearLayout>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/register_lottie"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toTopOf="@+id/register_area"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerText"
        app:lottie_fileName="success.json" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_login_edit"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="25dp"
        android:paddingTop="15dp"
        android:paddingEnd="10dp"
        android:paddingBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_area">

        <CheckBox
            android:id="@+id/check"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_custom" />

        <TextView
            android:id="@+id/Terms"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/korean"
            android:paddingStart="10dp"
            android:text="오똑캐 오톡해 약관 동의 사항" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_button"
        android:fontFamily="@font/korean"
        android:text="회원가입"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_area" />

</androidx.constraintlayout.widget.ConstraintLayout>